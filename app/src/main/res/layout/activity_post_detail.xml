<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/coordinator"
    tools:context="com.ucaldas.ro.reduccionobesidad.AddMenu">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id = "@+id/appBarAddMenu">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_post_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e9e9e9"
        android:layout_marginTop="60dp"
        android:paddingTop="4dp"
        android:layout_marginBottom="0dp"
        tools:context="com.ucaldas.ro.reduccionobesidad.PostDetail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_item_shadow"
                android:id="@+id/detailContainer"
                android:layout_marginBottom="44.5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/sample"
                    android:layout_margin="7dp"
                    android:id="@+id/imgPreview"/>

                <LinearLayout
                    android:background="@color/detailQualificationContainer"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignBottom="@id/imagePreview"
                    android:layout_marginTop="147dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp">
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.35"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.25"
                                android:layout_height="match_parent"
                                android:background="@drawable/border_radius_home_cal"
                                android:layout_marginBottom="4dp"
                                android:layout_marginRight="4dp"
                                android:id="@+id/piRelative">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:background="@drawable/border_radius_items_progress"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:id="@+id/piContainer"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentLeft="true"
                                    android:text="PI"
                                    android:textColor="#fff"
                                    android:textStyle="bold"
                                    android:gravity="center_horizontal|bottom"
                                    android:paddingBottom="3dp"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.25"
                                android:layout_height="match_parent"
                                android:background="@drawable/border_radius_home_cal"
                                android:layout_marginBottom="4dp"
                                android:layout_marginRight="4dp"
                                android:id="@+id/aaRelative">

                                <View
                                    android:id="@+id/aaContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:background="@drawable/border_radius_items_progress"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentLeft="true"
                                    android:text="AA"
                                    android:textColor="#fff"
                                    android:textStyle="bold"
                                    android:gravity="center_horizontal|bottom"
                                    android:paddingBottom="3dp"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/gsRelative"
                                android:layout_width="0dp"
                                android:layout_weight="0.25"
                                android:layout_height="match_parent"
                                android:background="@drawable/border_radius_home_cal"
                                android:layout_marginBottom="4dp"
                                android:layout_marginRight="4dp">

                                <View
                                    android:id="@+id/gsContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:background="@drawable/border_radius_items_progress"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="GS"
                                    android:textColor="#fff"
                                    android:textStyle="bold"
                                    android:gravity="center_horizontal|bottom"
                                    android:paddingBottom="3dp"
                                    android:id="@+id/textView"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/chRelative"
                                android:layout_width="0dp"
                                android:layout_weight="0.25"
                                android:layout_height="match_parent"
                                android:background="@drawable/border_radius_home_cal"
                                android:layout_marginBottom="4dp">

                                <View
                                    android:id="@+id/chContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:background="@drawable/border_radius_items_progress"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_alignParentBottom="true"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentLeft="true"
                                    android:text="CH"
                                    android:textColor="#fff"
                                    android:textStyle="bold"
                                    android:gravity="center_horizontal|bottom"
                                    android:paddingBottom="3dp"/>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:padding="4dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bandeja Paisa con Chorizo"
                            android:maxLines="1"
                            android:textAlignment="textStart"
                            android:layout_gravity="start"
                            android:textSize="14dp"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:ellipsize="end"
                            android:layout_marginLeft="15dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Original"
                            android:textSize="11dp"
                            android:layout_marginLeft="15dp"
                            android:textColor="#fff" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Daniel Estiven Rico Posada"
                            android:textSize="11.5dp"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:layout_marginLeft="15dp"/>

                    </LinearLayout>



                </LinearLayout>

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/commentsList"
                    android:layout_below="@+id/imgPreview">

                </ListView>

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp"
            android:background="@drawable/home_item_shadow"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <EditText android:id="@+id/edit_message"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:background="#fff"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:hint="Ingrese un comentario..."
                android:textSize="17sp"
                android:textAlignment="center" />

            <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.3"
                android:layout_marginTop="-2dp"
                android:textAllCaps="false"
                android:text="Enviar"/>

        </LinearLayout>


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>