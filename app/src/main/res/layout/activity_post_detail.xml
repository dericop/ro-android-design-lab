<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="0dp"
    tools:context="com.ucaldas.ro.reduccionobesidad.PostDetail">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_item_shadow"
        android:id="@+id/detailContainer"
        android:layout_marginBottom="44.5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/sample"
            android:layout_margin="7dp"
            android:id="@+id/imgPreview"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commentsList"
            android:layout_below="@+id/imgPreview">

        </ListView>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText android:id="@+id/edit_message"
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:background="#fff"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:hint="Ingrese un comentario..."
            android:textSize="17sp"
            android:textAlignment="center" />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:layout_marginTop="-2dp"
            android:text="Enviar"/>

    </LinearLayout>


</RelativeLayout>
