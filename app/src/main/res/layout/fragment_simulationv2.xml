<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ucaldas.ro.reduccionobesidad.Simulationv2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sección superior de textos -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alimentos"
                    android:gravity="start"
                    android:layout_marginLeft="16dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="% General"
                    android:gravity="end"
                    android:layout_marginRight="16dp"/>

            </RelativeLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c7c8ca"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:orientation="vertical">

                <!-- Sección de fichas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp">

                    <!-- Componente de la izquierda -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight=".85"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/home_item_shadow"
                        android:orientation="vertical">


                    <!-- Titulo superior -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginBottom="4dp">

                            <!--ícono izquierda-->
                            <LinearLayout
                                android:layout_width="25dp"
                                android:layout_height="18dp"
                                android:background="@drawable/border_radius"
                                android:backgroundTint="#f05a29"
                                android:id="@+id/categoryBox">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="PI"
                                    android:textAlignment="center"
                                    android:textSize="12sp"
                                    android:textColor="#fff"
                                    android:paddingTop="2dp" />

                            </LinearLayout>
                            <!-- título -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Procesados Industrialmente"
                                android:textSize="12sp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="2dp"/>
                            <!-- ícono derecha-->
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_action_more_info"
                                android:backgroundTint="#d0d2d3"
                                android:layout_alignParentRight="true"/>


                        </RelativeLayout>

                     <!-- histograma -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.20"
                                android:layout_height="wrap_content"
                                android:text="Bajo"
                                android:layout_gravity="end"
                                android:textAlignment="textEnd" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.60"
                                android:layout_height="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="#e9e9e9">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:background="#a8a8a8"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:layout_weight="0.2"/>


                        </LinearLayout>



                    </LinearLayout>

                    <!-- Componente de la derecha -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="0.25"
                        android:background="@drawable/home_item_shadow"
                        android:layout_marginTop="40dp"></LinearLayout>

                </LinearLayout>





            </LinearLayout>





        </LinearLayout>




    </ScrollView>

</FrameLayout>
