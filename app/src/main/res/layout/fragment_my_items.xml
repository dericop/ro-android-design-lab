<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ucaldas.ro.reduccionobesidad.MyItems">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="13dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desayunos (2)"
            android:id="@+id/txt_activities1"
            android:textColor="#666"
            android:textSize="17dp"
            android:padding="3dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/breakfast_gridView"
            android:background="@drawable/sample_f_2"
            android:layout_below="@id/txt_activities1"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/breakfast_gridView2"
            android:background="@drawable/sample_f_1"
            android:layout_marginLeft="100dp"
            android:layout_below="@id/txt_activities1"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Almuerzos (3)"
            android:id="@+id/txt_activities2"
            android:layout_marginTop="20dp"
            android:padding="3dp"
            android:layout_below="@+id/breakfast_gridView"
            android:textColor="#666"
            android:textSize="17dp"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/breakfast_gridView3"
            android:background="@drawable/sample_f_3"
            android:layout_below="@id/txt_activities2"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/breakfast_gridView4"
            android:background="@drawable/sample_f_4"
            android:layout_marginLeft="100dp"
            android:layout_below="@id/txt_activities2"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/breakfast_gridView5"
            android:background="@drawable/sample_f_5"
            android:layout_marginLeft="200dp"
            android:layout_below="@id/txt_activities2"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Actividades (1)"
            android:id="@+id/txt_activities3"
            android:layout_marginTop="20dp"
            android:padding="3dp"
            android:layout_below="@+id/breakfast_gridView5"
            android:textColor="#666"
            android:textSize="17dp"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/breakfast_gridView6"
            android:background="@drawable/sample_4"
            android:layout_below="@id/txt_activities3"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

</FrameLayout>
